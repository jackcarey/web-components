{
  "author": "jackcarey (jackcarey.co.uk)",
  "dependencies": {
    "diff": "^8.0.2",
    "ical.js": "^2.2.1",
    "reveal.js": "^5.2.1",
    "reveal.js-appearance": "^1.3.4",
    "rss-parser": "^3.13.0",
    "web-components": "file:"
  },
  "description": "A collection of web components for a variety purposes.",
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@jest/globals": "^29.7.0",
    "@mdx-js/react": "^3.1.0",
    "@npmcli/package-json": "^6.1.1",
    "@playwright/test": "^1.51.1",
    "@storybook/addon-a11y": "^10.1.0",
    "@storybook/addon-coverage": "^3.0.0",
    "@storybook/addon-docs": "^10.1.0",
    "@storybook/addon-links": "^10.1.0",
    "@storybook/addon-themes": "^10.1.0",
    "@storybook/builder-vite": "^10.1.0",
    "@storybook/test-runner": "^0.24.2",
    "@storybook/web-components-vite": "^10.1.0",
    "@types/ical": "^0.8.3",
    "axe-playwright": "^2.0.3",
    "chromatic": "^11.29.0",
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "jsr": "^0.13.5",
    "lit": "^3.2.0",
    "storybook": "^10.1.0",
    "wait-on": "^8.0.3"
  },
  "keywords": [],
  "license": "ISC",
  "main": "autoloader.js",
  "name": "web-components",
  "scripts": {
    "build-docs": "npm i && node scripts/install-deps-at-root.mjs && node scripts/generate-pkg-readmes.mjs && node scripts/generate-root-readme.mjs && node scripts/generate-storybook-docs.mjs && npm run build-storybook",
    "build-storybook": "node scripts/generate-storybook-docs.mjs && storybook build --output-dir docs",
    "build": "npm run build-docs && npm run build-storybook",
    "storybook": "npm run build-docs && storybook dev -p 6006",
    "test": "test-storybook --ci --json --failOnConsole --includeTags=\"test,a11y-minor,a11y-major,a11y-serious,a11y-critical\" --excludeTags=\"skip\"",
    "test-coverage": "test --coverage",
    "test-ci": "npm run build-storybook && concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npx http-server docs --silent --port 6006\" \"wait-on tcp:6006 && npm run test\"",
    "serve-ci": "npm run build-docs && npm run storybook",
    "chromatic": "npx chromatic"
  },
  "version": "1.0.0"
}
